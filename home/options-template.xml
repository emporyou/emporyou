<?xml version="1.0" encoding="UTF-8"?>
<document>
<constant tagname="_id" substitution="%id">
<rowtype tagname="//variants">
<variable tagname="option" substitution="%name"/>
<variable tagname="price" substitution="%price"/>
<variable tagname="image" substitution="%image"/>
<variable tagname="valore-base" substitution="%valore"/>
<javascript substitution="%risparmio">%valore-%price</javascript>
<variable tagname="valore-base|price" convert="risparmio" pickup="csv" substitution="%risparmio"/>
<html><button value="%name" class="bottone-opzione" onclick="this.classList.toggle('select');document.getElementById('price-target-pro%id').innerHTML='€ '+%price;document.getElementById('price-target-det%id').innerHTML='€ '+%valore;document.getElementById('risparmio-target%id').innerHTML='€ '+%risparmio;document.getElementById('main-image-pro%id').style.backgroundImage='url(\'%image\')'">%name</button></html>
</rowtype>
</document>