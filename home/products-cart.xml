<?xml version="1.0" encoding="UTF-8"?>
<document>
<constantjavascript substitution="%total-items">cartTotalItems</constantjavascript>
<constantjavascript substitution="%total-tax">cartTotalTax</constantjavascript>
<constantjavascript substitution="%total-sub">cartTotalSub</constantjavascript>
<constantjavascript substitution="%total-shipment">cartTotalShipment</constantjavascript>
<constantjavascript substitution="%total-total">cartTotalTotal</constantjavascript>
<rowtype tagname="//deal">
<variable tagname="cart_qt" substitution="%cart-qt"/>
<variable tagname="merchant/name" substitution="%vendor-name"/>
<variable tagname="merchant/lat" substitution="%lat"/>
<variable tagname="merchant/lon" substitution="%lon"/>
<variable tagname="merchant/city" substitution="%city"/> 
<variable tagname="_id" substitution="%id"/>
<variable tagname="merchant/id" substitution="%merch-id"/>
<variable tagname="description" substitution="%description"/>
<variable tagname="title" substitution="%product-name"/>
<variable tagname="title" substitution="%jsproduct-name" escape="js"/>
<inline tagname="metafields" substitution="%product-infos" preload="metafields-template.xml"/>
<variable tagname="variants[optionTitle]/price" substitution="%price" pickup="csv:-"/>
<variable tagname="pageTitle" substitution="%subtitle"/>
<html><div class="object-container"><div 
       class="cart-item-image" 
       style="background: url('http://emporyou.com/uploads/%imagefile');background-size:cover"><div 
       class="cart-add-item"><img class="cart-add-icon buttoncart" onclick="addProduct('%jsproduct-name','#UNIQUEID#-#ROWIDX#','%id')" src="../img/more.png"/></div><div 
       class="cart-remove-item"><img class="cart-remove-icon buttoncart" onclick="removeProduct('%jsproduct-name','#UNIQUEID#-#ROWIDX#','%id')" src="../img/less.png"/></div></div><div 
       class="qt-name"><div 
       class="cart-item-qt">%cart-qt</div><div 
       class="cart-item-name">%product-name</div></div></div></html>
</rowtype>
<beforeall><![CDATA[<div class="cart-infos">
    <div class="cart-summary">Items in cart</div>
    <div class="cart-summary">Sub total</div>
    <div class="cart-summary">Shipping</div>
    <div class="cart-summary">Tax</div>
    <div class="cart-summary"><b>Total</b></div>
</div>
<div class="cart-infos-values">
    <div class="cart-summary qt-items">%total-items</div>
    <div class="cart-summary">%total-sub</div>
    <div class="cart-summary">%total-shipment</div>
    <div class="cart-summary">%total-tax</div>
    <div class="cart-summary"><b>%total-total</b></div>
</div>
<div class="cart-items-container">]]></beforeall>
<afterall><![CDATA[</div><div id="pattern" onclick="openCheckout()" style="display:none"><b>check out now</b></div>]]></afterall>
<casezero>:( <br/> Il tuo carrello Ã¨ vuoto! (sfigato)</casezero>
<onloadall>setTimeout("document.getElementById('pattern').style.bottom='0';document.getElementById('pattern').style.display='block'",150)</onloadall>
</document>