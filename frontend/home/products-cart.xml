<?xml version="1.0" encoding="UTF-8"?>
<document>
<rowtype tagname="//product">
<variable tagname="cart_qt" substitution="%cart-qt"/>
<variable tagname="merchant/name" substitution="%vendor-name"/>
<variable tagname="merchant/lat" substitution="%lat"/>
<variable tagname="merchant/lon" substitution="%lon"/>
<variable tagname="merchant/city" substitution="%city"/>
<variable tagname="_id" substitution="%id"/>
<variable tagname="merchant/id" substitution="%merch-id"/>
<variable tagname="description" substitution="%description"/>
<variable tagname="title" substitution="%product-name"/>
<variable tagname="title" substitution="%jsproduct-name" escape="js"/>
<inline tagname="metafields" substitution="%product-infos" preload="metafields-template.xml"/>
<variable tagname="variants[optionTitle]/price" substitution="%price" pickup="csv:-"/>
<variable tagname="pageTitle" substitution="%subtitle"/>
<html><div class="cart-infos-values"><div 
                                          class="cart-summary qt-items"></div><div 
                                          class="cart-summary">€55,00</div><div 
                                          class="cart-summary">€0.00</div><div 
                                          class="cart-summary">€1000,00</div><div 
                                          class="cart-summary"><b>1055,00</b></div></div><div 
                                          class="cart-items-container"><div 
                                          class="cart-item-image" style="background: url('http://emporyoum.com/get_product_image?m_id=%merch-id&amp;p_id=%id');background-size:cover"><div 
                                          class="cart-add-item"><img class="cart-add-icon buttoncart" src="../img/more.png"/></div><div 
                                          class="cart-remove-item"><img class="cart-remove-icon buttoncart" src="../img/less.png"/></div></div><div 
                                          class="qt-name"><div class="cart-item-qt">%cart-qt</div><div class="cart-item-name">%product-name</div></div></div></html>
<beforeall><div class="cart-infos"><div 
   class="cart-summary">Items in cart</div><div 
   class="cart-summary">Sub total</div><div 
   class="cart-summary">Shipping</div><div 
   class="cart-summary">Tax</div><div 
   class="cart-summary"><b>Total</b></div></div></beforeall>
<afterall><div id="pattern"><b>check out now</b></div></afterall></rowtype></document>