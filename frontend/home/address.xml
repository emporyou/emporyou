<?xml version="1.0" encoding="UTF-8"?>
<document>
<rowtype tagname="//item">
<variable tagname="name/familyName" substitution="%lastname"/>
<variable tagname="name/givenName" substitution="%name"/>
<variable tagname="email" substitution="%email"/>
<variable tagname="language" substitution="%language" convert="sessionlang"/>
<constantjavascript substitution="%country">window.sessionlang=function(lang){if(lang=='it'){var c="Italy";return c}else{var c="Country";return c;}}</constantjavascript>
<html><textarea class="text-address" id="country-textarea">%country</textarea><textarea 
                       class="text-address" id="country-textaera">%name %lastname</textarea><textarea 
                       class="text-address" id="country-textaera">Address</textarea><textarea 
                       class="text-address" id="country-textaera">Address</textarea><textarea 
                       class="text-address" id="country-textaera">ZIP code</textarea><textarea 
                       class="text-address" id="country-textaera">City</textarea><textarea 
                       class="text-address" id="country-textaera">Region</textarea><textarea 
                       class="text-address" id="country-textaera">Phone</textarea></html></rowtype></document>